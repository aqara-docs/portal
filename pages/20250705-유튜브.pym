def get_available_formats(url):
    """ì‚¬ìš© ê°€ëŠ¥í•œ í¬ë§· ëª©ë¡ ê°€ì ¸ì˜¤ê¸°"""
    try:
        ydl_opts = {
            'quiet': True,
            'no_warnings': True,
        }
        
        with yt_dlp.YoutubeDL(ydl_opts) as ydl:
            info = ydl.extract_info(url, download=False)
            formats = info.get('formats', [])
            
            video_formats = []
