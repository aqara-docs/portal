def parse_vtt_captions(vtt_content):
    """VTT ìë§‰ íŒŒì¼ì„ íŒŒì‹±í•˜ì—¬ í…ìŠ¤íŠ¸ ì¶”ì¶œ"""
    try:
        lines = vtt_content.split('\n')
