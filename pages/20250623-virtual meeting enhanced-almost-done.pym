    # í•µì‹¬ ì¸ì‚¬ì´íŠ¸ (RAG ê°•í™”)
    key_insights = meeting.extract_key_insights()
    if key_insights:
        context_parts.append(f"\n=== í•µì‹¬ ì¸ì‚¬ì´íŠ¸ ===")
        for insight in key_insights[-5:]:  # ìµœê·¼ 5ê°œë§Œ
            context_parts.append(f"â€¢ {insight}")
    
    # ìµœê·¼ ëŒ€í™” (ì§ì ‘ì  ë§¥ë½)
    recent_messages = meeting.messages[-6:] if len(meeting.messages) > 6 else meeting.messages
    if recent_messages:
        context_parts.append(f"\n=== ìµœê·¼ ëŒ€í™” ===")
        for msg in recent_messages:
            context_parts.append(f"{msg.persona_name}: {msg.content}")
    
    # ë‹¤ìŒ ë¼ìš´ë“œ ë°©í–¥ì„± ì œì‹œ
    context_parts.append(f"\n=== ë‹¤ìŒ ë°œì–¸ ë°©í–¥ ===")
    if meeting.conversation_round + 1 <= 3:
        context_parts.append("ì´ˆê¸° ì˜ê²¬ ê°œì§„ ë° ë¬¸ì œ ì •ì˜ ë‹¨ê³„")
    elif meeting.conversation_round + 1 <= 6:
        context_parts.append("ì‹¬í™” í† ë¡  ë° í•´ê²°ì±… ëª¨ìƒ‰ ë‹¨ê³„")
    else:
        context_parts.append("ê²°ë¡  ë„ì¶œ ë° ì‹¤í–‰ ë°©ì•ˆ ì •ë¦¬ ë‹¨ê³„")
    
    return "\n".join(context_parts)

def stream_response(text: str, typing_speed: float = 0.1):
    """ìŠ¤íŠ¸ë¦¬ë° íƒ€ì´í•‘ íš¨ê³¼ - ì†ë„ ì¡°ì ˆ ê°€ëŠ¥"""
    import time
    words = text.split()
    for i, word in enumerate(words):
        if i == 0:
            yield word
        else:
            yield " " + word
        time.sleep(typing_speed)  # íƒ€ì´í•‘ ì†ë„ ì¡°ì ˆ (ì‚¬ìš©ì ì„¤ì •)

def display_message(message: Message, is_latest: bool = False):
    """ë©”ì‹œì§€ í‘œì‹œ"""
    avatar = "ğŸ¯" if message.is_moderator else "ğŸ­"
    if message.is_human_input:
